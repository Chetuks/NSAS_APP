<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nsas_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.MeetingActionActivity"></activity>
        <activity
            android:name=".activities.SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".activities.MeetingActivityTabs"
            android:label="@string/title_activity_meeting_tabs"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.AuditActivityTabs"
            android:label="@string/title_activity_audit_tabs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.StaticPdfActivity" />
        <activity
            android:name=".activities.PdfActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".activities.DocumentActivity" />
        <activity
            android:name=".activities.RegistrationPage"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".activities.HomePage"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".activities.AuditDetailsActivity" />
    </application>

</manifest>