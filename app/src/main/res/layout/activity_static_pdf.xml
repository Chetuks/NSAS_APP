<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StaticPdfActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Heloooooo"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mainsub_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="mainsubheading"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coverpage_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="coverpagename"
                android:textColor="#000"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/emptyimage" />

                <ImageView
                    android:id="@+id/below_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/emptyimage" />
            </LinearLayout>

            <TextView
                android:id="@+id/heading_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="content"
                android:layout_marginBottom="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subheading"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subheading_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subheadingcontent"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/subbheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subbheading"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/signature"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/emptyimage"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>